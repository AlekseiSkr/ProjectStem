<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/toast_frame"
        android:clickable="false"
        android:clipToPadding="false"
        android:divider="@android:drawable/divider_horizontal_dark"
        android:elevation="6dp"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:hapticFeedbackEnabled="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/origin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="35dp"
            android:ems="5"
            android:gravity="center|fill_horizontal"
            android:text="@string/origin"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/translation" />

        <TextView
            android:id="@+id/translation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:autofillHints="@string/translate"
            android:ems="5"
            android:gravity="center|fill_horizontal"
            android:text="@string/translation"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/spacio"
            tools:ignore="LabelFor" />

        <Space
            android:id="@+id/spacio"
            android:layout_width="77dp"
            android:layout_height="22dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/knowledge"
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="center|fill_horizontal"
            android:text="2"
            android:textAlignment="viewEnd" />

        <TextView
            android:id="@+id/KnowledgeCapacity"
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:ems="5"
            android:gravity="center|fill_horizontal"
            android:text="@string/maxKnowledge"
            android:textAlignment="viewEnd" />

        <ImageView
            android:id="@+id/knowledgeStatus1"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_knowledge_dot"
            app:tint="@color/darkGreen" />

        <ImageView
            android:id="@+id/knowledgeStatus2"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_knowledge_dot"
            app:tint="@color/mildGreen" />

        <ImageView
            android:id="@+id/knowledgeStatus3"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_knowledge_dot"
            app:tint="@color/smoothGreen" />

        <TextView
            android:id="@+id/groupLanguage"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:text=""
            android:visibility="gone" />

        <TextView
            android:id="@+id/wordId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>