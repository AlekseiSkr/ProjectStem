<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView

        android:id="@+id/tvTranslation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWord" />

    <TextView
        android:id="@+id/tvWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knowledgeImg" />

    <TextView
        android:id="@+id/wordNote"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:text="kind of like _another word_ but not  "
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/tvTranslation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTranslation2" />

    <TextView
        android:id="@+id/tvTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Translation: "
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="306dp" />

    <ImageView
        android:id="@+id/knowledgeImg"
        android:layout_width="51dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDefinitionList"
        android:layout_width="389dp"
        android:layout_height="307dp"
        android:paddingTop="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tvTranslation"
        tools:layout_editor_absoluteX="1dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="171dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWord"
        app:layout_constraintEnd_toStartOf="@+id/tvWord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvWord" />


</androidx.constraintlayout.widget.ConstraintLayout>